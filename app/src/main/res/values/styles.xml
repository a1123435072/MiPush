<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <item name="preferenceTheme">@style/AppTheme.PreferenceTheme</item>
    </style>

    <style name="AppTheme.PreferenceTheme" parent="PreferenceThemeOverlay">
        <!-- Only need this on pre-Lollipop -->
        <item name="accentColorCompat">?colorAccent</item>
        <item name="switchPreferenceCompatStyle">@style/Preference.SwitchPreferenceCompat</item>
        <item name="simpleMenuPreferenceStyle">@style/SimpleMenuPreference</item>
    </style>

    <style name="SimpleMenuPreference" parent="Preference.SimpleMenuPreference">
        <item name="popupStyle">@style/SimpleMenuPreference.Popup</item>
    </style>
    <style name="SimpleMenuPreference.Popup" parent="Preference.SimpleMenuPreference.Popup">
        <item name="listElevation">40dp</item>
    </style>

    <style name="AppTheme.Wizard" parent="@style/SuwThemeMaterial.Light">
        <item name="colorPrimaryDark">@color/suw_color_accent_light</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/suw_color_accent_light</item>
    </style>

    <style name="Widget.Design.BottomNavigationView" parent="">
        <item name="itemBackground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Theme.Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>
